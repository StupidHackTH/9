<section id="what-to-bring" class="w-full bg-gradient-to-br from-[#05232e] to-[#05204E] text-white pt-24 pb-16">
  <div class="max-w-6xl mx-auto px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-7xl text-white mb-6 tracking-wide font-display scroll-animate fade-down">
        WHAT TO BRING
      </h2>
      <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto scroll-animate fade-up stagger-1">
        Pack your essentials for a weekend of creative chaos
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Laptop & Tech -->
      <div class="bg-gray-900 rounded-xl p-8 border border-gray-800 hover:border-[#19806f] transition-colors group scroll-animate rotate-in stagger-2">
        <div class="text-center">
          <iconify-icon icon="mdi:laptop" class="text-[#19806f] text-6xl mb-6 block"></iconify-icon>
          <h3 class="text-2xl font-bold mb-4 font-subhead text-white">Tech Essentials</h3>
          <ul class="space-y-3 text-gray-300">
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Laptop & chargers</span>
            </li>
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Phone charger</span>
            </li>
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Extension cords</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Sleeping Gear -->
      <div class="bg-gray-900 rounded-xl p-8 border border-gray-800 hover:border-[#19806f] transition-colors group scroll-animate rotate-in stagger-3">
        <div class="text-center">
          <iconify-icon icon="mdi:bed" class="text-[#19806f] text-6xl mb-6 block"></iconify-icon>
          <h3 class="text-2xl font-bold mb-4 font-subhead text-white">Sleep Setup</h3>
          <ul class="space-y-3 text-gray-300">
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Pillow & blanket</span>
            </li>
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Sleeping bag (optional)</span>
            </li>
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Eye mask & earplugs</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Personal Items -->
      <div class="bg-gray-900 rounded-xl p-8 border border-gray-800 hover:border-[#19806f] transition-colors group scroll-animate rotate-in stagger-4">
        <div class="text-center">
          <iconify-icon icon="mdi:account-heart" class="text-[#19806f] text-6xl mb-6 block"></iconify-icon>
          <h3 class="text-2xl font-bold mb-4 font-subhead text-white">Personal Care</h3>
          <ul class="space-y-3 text-gray-300">
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Toothbrush & toiletries</span>
            </li>
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Change of clothes</span>
            </li>
            <li class="flex items-center gap-3">
              <iconify-icon icon="mdi:check-circle" class="text-[#19806f] text-xl"></iconify-icon>
              <span>Your creativity! âœ¨</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Special Note -->
    <div class="mt-12 bg-[#19806f]/10 border border-[#19806f]/30 rounded-xl p-6 scroll-animate fade-up stagger-5">
      <div class="flex items-start gap-4">
        <iconify-icon icon="mdi:lightbulb" class="text-[#19806f] text-2xl mt-1"></iconify-icon>
        <div>
          <h4 class="text-xl font-bold mb-2 text-white font-subhead">Pro Tip</h4>
          <p class="text-gray-300 leading-relaxed">
            Game Dev Hub provides basic amenities, but bringing your own comfort items will make your overnight stay much more enjoyable. 
            Don't forget snacks and caffeine to fuel your creative marathon!
          </p>
        </div>
      </div>
    </div>
  </div>
</section>