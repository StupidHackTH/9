---
import { getSponsorsByTier, tierNames } from "../data/sponsors";
import { donors } from "../data/donors";
---

<section
  id="sponsors"
  class="w-full bg-gradient-to-br from-[#05232e] to-[#05204E] text-white pt-24 pb-16"
>
  <div class="max-w-6xl mx-auto px-8">
    <h2
      class="text-4xl md:text-7xl text-white mb-6 text-center tracking-wide font-display scroll-animate fade-down"
    >
      ‡∏ú‡∏π‡πâ‡∏≠‡∏∏‡∏õ‡∏ñ‡∏±‡∏°‡∏†‡πå‡πÅ‡∏´‡πà‡∏á‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏û‡∏µ‡πâ‡∏¢‡∏ô
    </h2>

    <!-- Tier 3: ‡πÄ‡∏à‡πâ‡∏≤‡∏û‡∏£‡∏∞‡∏¢‡∏≤‡∏°‡∏´‡∏≤‡πÄ‡∏û‡∏µ‡πâ‡∏¢‡∏ô‡∏ö‡∏±‡∏ô‡∏•‡∏∑‡∏≠‡πÇ‡∏•‡∏Å -->
    {
      getSponsorsByTier("tier3").length > 0 && (
        <div class="mb-8">
          <div class="flex items-center justify-center gap-3 mb-6 scroll-animate fade-up stagger-1">
            <iconify-icon icon="mdi:crown" class="text-[#19806f] text-4xl" />
            <h3
              class="text-2xl font-bold text-center text-white"
              style="font-family: 'K2D', sans-serif;"
            >
              {tierNames.tier3}
            </h3>
          </div>
          <div class="flex flex-wrap gap-6 justify-center items-start">
            {getSponsorsByTier("tier3").map((sponsor, index) => (
              <div
                class={`flex flex-col items-center ${sponsor.isPlaceholder ? "opacity-60" : ""} max-w-xs scroll-animate scale-up stagger-${index + 2}`}
              >
                {sponsor.url ? (
                  <a
                    href={sponsor.url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={sponsor.logo}
                      alt={sponsor.name}
                      class="w-full h-auto max-w-64 rounded-lg mb-3"
                    />
                  </a>
                ) : (
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="w-full h-auto max-w-64 rounded-lg mb-3"
                  />
                )}
                {sponsor.message && (
                  <div class="relative bg-gray-700 rounded-2xl px-4 py-3 text-white text-sm w-72 mt-2">
                    {/* Speech bubble tail pointing up to logo */}
                    <div class="absolute -top-2 left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-8 border-r-8 border-b-8 border-l-transparent border-r-transparent border-b-gray-700" />
                    <p class="text-center leading-relaxed">{sponsor.message}</p>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Tier 2: ‡πÄ‡∏™‡∏ô‡∏≤‡∏ö‡∏î‡∏µ‡∏ú‡∏π‡πâ‡∏°‡∏≤‡∏Å‡πÄ‡∏°‡∏ï‡∏ï‡∏≤ -->
    {
      getSponsorsByTier("tier2").length > 0 && (
        <div class="mb-8">
          <div class="flex items-center justify-center gap-3 mb-6 scroll-animate fade-up stagger-3">
            <iconify-icon icon="mdi:medal" class="text-[#19806f] text-4xl" />
            <h3
              class="text-2xl font-bold text-center text-white"
              style="font-family: 'K2D', sans-serif;"
            >
              {tierNames.tier2}
            </h3>
          </div>
          <div class="flex flex-wrap gap-6 justify-center items-start">
            {getSponsorsByTier("tier2").map((sponsor, index) => (
              <div
                class={`flex flex-col items-center ${sponsor.isPlaceholder ? "opacity-60" : ""} max-w-60 scroll-animate scale-up stagger-${index + 4}`}
              >
                {sponsor.url ? (
                  <a
                    href={sponsor.url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={sponsor.logo}
                      alt={sponsor.name}
                      class="w-full h-auto max-w-56 rounded-lg mb-3"
                    />
                  </a>
                ) : (
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="w-full h-auto max-w-56 rounded-lg mb-3"
                  />
                )}
                {sponsor.message && (
                  <div class="relative bg-gray-700 rounded-2xl px-4 py-3 text-white text-sm w-64 mt-2">
                    {/* Speech bubble tail pointing up to logo */}
                    <div class="absolute -top-2 left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-8 border-r-8 border-b-8 border-l-transparent border-r-transparent border-b-gray-700" />
                    <p class="text-center leading-relaxed">{sponsor.message}</p>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Individual Sponsors -->
    {
      getSponsorsByTier("individual").length > 0 && (
        <div class="border-t border-gray-800 pt-8 mt-8">
          <div class="flex items-center justify-center gap-3 mb-8 scroll-animate fade-up stagger-4">
            <iconify-icon
              icon="mdi:account-heart"
              class="text-[#19806f] text-4xl"
            />
            <h3
              class="text-2xl font-bold text-center text-white"
              style="font-family: 'K2D', sans-serif;"
            >
              {tierNames.individual}
            </h3>
          </div>
          <div class="bg-gray-900 rounded-xl p-8 border border-gray-800 max-w-4xl mx-auto scroll-animate fade-up stagger-5">
            <div class="space-y-6">
              {getSponsorsByTier("individual").map((sponsor, index) => (
                <div
                  class={`grid grid-cols-1 md:grid-cols-3 gap-4 items-start ${sponsor.isPlaceholder ? "opacity-60" : ""} scroll-animate fade-left stagger-${index + 6}`}
                >
                  {/* Left: Avatar and Name */}
                  <div class="flex items-center gap-3">
                    <img
                      src={`https://api.dicebear.com/9.x/notionists-neutral/svg?seed=${encodeURIComponent(sponsor.name)}&backgroundColor=b6e3f4,c0aede,d1d4f9,ffd5dc,ffdfbf&backgroundType=gradientLinear`}
                      alt={sponsor.name}
                      class="w-12 h-12 rounded-full bg-white/20 p-1"
                    />
                    {sponsor.url ? (
                      <a
                        href={sponsor.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-white font-bold text-base hover:underline"
                      >
                        {sponsor.name}
                      </a>
                    ) : (
                      <span class="text-white font-bold text-base">
                        {sponsor.name}
                      </span>
                    )}
                  </div>

                  {/* Right: Message Speech Bubble */}
                  <div class="md:col-span-2">
                    {(sponsor.message || sponsor.isPlaceholder) && (
                      <div class="relative bg-gray-700 rounded-2xl px-4 py-3 text-white text-sm w-fit max-w-md">
                        {/* Speech bubble tail - pointing up on mobile, left on desktop */}
                        <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-2 w-0 h-0 border-l-8 border-r-8 border-b-8 border-l-transparent border-r-transparent border-b-gray-700 md:hidden" />
                        <div class="absolute left-0 top-4 transform -translate-x-2 w-0 h-0 border-t-8 border-b-8 border-r-8 border-t-transparent border-b-transparent border-r-gray-700 hidden md:block" />

                        {sponsor.message ? (
                          <p class="text-left leading-relaxed">{sponsor.message}</p>
                        ) : (
                          <p class="text-left text-gray-400 italic">
                            Sponsor Us...
                          </p>
                        )}
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
            
            <!-- Missing Sponsors Notice -->
            <div class="mt-8 bg-[#19806f]/10 border border-[#19806f]/30 rounded-xl p-6 scroll-animate fade-up">
              <div class="flex items-start gap-4">
                <iconify-icon icon="mdi:information" class="text-[#19806f] text-2xl mt-1"></iconify-icon>
                <div>
                  <h4 class="text-xl font-bold mb-3 text-white font-subhead">Missing from the list?</h4>
                  <p class="text-gray-300 leading-relaxed mb-4">
                    Some generous supporters sent us contributions without filling in our form. If your name is missing from the list above, 
                    please <a href="https://grtn.org/e/sht9/spon" target="_blank" rel="noopener noreferrer" class="text-[#19806f] hover:underline font-semibold">fill in this form</a> 
                    and we'll update the website accordingly.
                  </p>
                  <p class="text-gray-300 leading-relaxed mb-4">
                    To change your message or other details, contact our admins at 
                    <a href="https://m.me/creatorsgarten" target="_blank" rel="noopener noreferrer" class="text-[#19806f] hover:underline font-semibold">m.me/creatorsgarten</a>.
                  </p>
                  <p class="text-gray-300 leading-relaxed">
                    We're still open for individual sponsorship contributions! Every bit of support helps make this wonderfully stupid event possible. üéâ
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      )
    }

    <!-- Donors Section: ‡∏ú‡∏π‡πâ‡∏ö‡∏£‡∏¥‡∏à‡∏≤‡∏Ñ‡πÅ‡∏´‡πà‡∏á‡∏Ñ‡∏ß‡∏≤‡∏°‡∏î‡∏µ -->
    {
      (donors[0].length > 0 || donors[1].length > 0 || donors[2].length > 0) && (
        <div class="border-t border-gray-800 pt-8 mt-8">
          <div class="flex items-center justify-center gap-3 mb-8 scroll-animate fade-up stagger-7">
            <iconify-icon
              icon="mdi:heart"
              class="text-[#19806f] text-4xl"
            />
            <h3
              class="text-2xl font-bold text-center text-white"
              style="font-family: 'K2D', sans-serif;"
            >
              ‡∏ä‡∏≤‡∏ß‡∏ö‡πâ‡∏≤‡∏ô‡∏ú‡∏π‡πâ‡πÑ‡∏°‡πà‡πÄ‡∏≠‡∏≤‡πÄ‡∏á‡∏¥‡∏ô‡∏Ñ‡∏∑‡∏ô
            </h3>
          </div>
          <div class="max-w-4xl mx-auto text-center scroll-animate fade-up stagger-8">
            <!-- Tier 1: Deposit + Extra (Largest, most prominent) -->
            {donors[0].length > 0 && (
              <div class="mb-8">
                <div class="flex flex-wrap justify-center gap-4">
                  {donors[0].map((name, index) => (
                    <span class="text-lg font-bold text-white bg-gray-700/50 border border-gray-700 px-4 py-2 rounded-full scroll-animate fade-up stagger-${index + 9}">
                      {name}
                    </span>
                  ))}
                </div>
              </div>
            )}
            
            <!-- Tier 2: Full Deposit (Medium prominence) -->
            {donors[1].length > 0 && (
              <div class="mb-6">
                <div class="flex flex-wrap justify-center gap-3">
                  {donors[1].map((name, index) => (
                    <span class="text-base font-semibold text-white bg-gray-700/50 border border-gray-700 px-3 py-2 rounded-full scroll-animate fade-up stagger-${index + 10}">
                      {name}
                    </span>
                  ))}
                </div>
              </div>
            )}
            
            <!-- Tier 3: Partial Deposit (Standard prominence) -->
            {donors[2].length > 0 && (
              <div class="mb-4">
                <div class="flex flex-wrap justify-center gap-2">
                  {donors[2].map((name, index) => (
                    <span class="text-sm text-white bg-gray-700/50 border border-gray-700 px-3 py-1 rounded-full scroll-animate fade-up stagger-${index + 17}">
                      {name}
                    </span>
                  ))}
                </div>
              </div>
            )}
            
            <!-- Thank you message -->
            <div class="mt-8 bg-[#19806f]/10 border border-[#19806f]/30 rounded-xl p-6 scroll-animate fade-up">
              <div class="flex items-start gap-4">
                <iconify-icon icon="mdi:heart-multiple" class="text-[#19806f] text-2xl mt-1"></iconify-icon>
                <div class="text-left">
                  <h4 class="text-xl font-bold mb-3 text-white font-subhead">Thank you for your support</h4>
                  <p class="text-gray-300 leading-relaxed">
                    Thank you to everyone who chose to donate their deposit to support Stupido Hackettino ‡πô.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      )
    }

    <!-- In-Kind Sponsors: ‡∏ú‡∏π‡πâ‡πÉ‡∏à‡∏ö‡∏∏‡∏ç‡πÅ‡∏à‡∏Å‡∏Ç‡∏≠‡∏á -->
    {
      getSponsorsByTier("in-kind").length > 0 && (
        <div class="border-t border-gray-800 pt-8 mt-8">
          <div class="flex items-center justify-center gap-3 mb-8 scroll-animate fade-up stagger-6">
            <iconify-icon
              icon="mdi:gift"
              class="text-[#19806f] text-4xl"
            />
            <h3
              class="text-2xl font-bold text-center text-white"
              style="font-family: 'K2D', sans-serif;"
            >
              {tierNames["in-kind"]}
            </h3>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
            {getSponsorsByTier("in-kind").map((sponsor, index) => (
              <div
                class={`bg-gray-900 rounded-xl p-6 border border-gray-800 hover:border-[#19806f] transition-colors group ${sponsor.isPlaceholder ? "opacity-60" : ""} scroll-animate fade-up stagger-${index + 7}`}
              >
                <div class="flex items-center gap-4">
                  {/* Logo placeholder or actual logo */}
                  <div class="w-16 h-16 bg-gray-800 rounded-lg flex items-center justify-center flex-shrink-0">
                    {sponsor.logo ? (
                      sponsor.url ? (
                        <a
                          href={sponsor.url}
                          target="_blank"
                          rel="noopener noreferrer"
                        >
                          <img
                            src={sponsor.logo}
                            alt={sponsor.name}
                            class="w-full h-full object-contain rounded-lg"
                          />
                        </a>
                      ) : (
                        <img
                          src={sponsor.logo}
                          alt={sponsor.name}
                          class="w-full h-full object-contain rounded-lg"
                        />
                      )
                    ) : (
                      <iconify-icon 
                        icon={
                          sponsor.contribution?.includes("Coffee") ? "mdi:coffee" :
                          sponsor.contribution?.includes("Prizes") ? "mdi:trophy" :
                          sponsor.contribution?.includes("Ticketing") ? "mdi:ticket" :
                          sponsor.contribution?.includes("GPU") ? "mdi:cloud" :
                          "mdi:gift"
                        }
                        class="text-[#19806f] text-3xl"
                      />
                    )}
                  </div>
                  
                  {/* Content */}
                  <div class="flex-1">
                    {sponsor.url ? (
                      <a
                        href={sponsor.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-white font-bold text-lg hover:text-[#19806f] transition-colors block"
                      >
                        {sponsor.name}
                      </a>
                    ) : (
                      <h4 class="text-white font-bold text-lg">
                        {sponsor.name}
                      </h4>
                    )}
                    
                    {sponsor.contribution && (
                      <p class="text-gray-300 text-sm mt-1">
                        {sponsor.contribution}
                      </p>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      )
    }
  </div>
</section>
