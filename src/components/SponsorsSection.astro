---
import { getSponsorsByTier, tierNames } from "../data/sponsors";
---

<section class="w-full bg-gradient-to-br from-[#05232e] to-[#05204E] text-white pt-24 pb-16">
  <div class="max-w-6xl mx-auto px-8">
    <h2 class="text-4xl md:text-7xl text-white mb-6 text-center tracking-wide font-display">
      ผู้อุปถัมภ์แห่งความเพี้ยน
    </h2>

    <!-- Tier 3: เจ้าพระยามหาเพี้ยนบันลือโลก -->
    {
      getSponsorsByTier("tier3").length > 0 && (
        <div class="mb-8">
          <div class="flex items-center justify-center gap-3 mb-6">
            <iconify-icon icon="mdi:crown" class="text-[#19806f] text-4xl"></iconify-icon>
            <h3 class="text-2xl font-bold text-center text-white" style="font-family: 'K2D', sans-serif;">
              {tierNames.tier3}
            </h3>
          </div>
          <div class="flex flex-wrap gap-6 justify-center items-start">
            {getSponsorsByTier("tier3").map((sponsor) => (
              <div
                class={`flex flex-col items-center ${sponsor.isPlaceholder ? "opacity-60" : ""} max-w-xs`}
              >
                {sponsor.url ? (
                  <a
                    href={sponsor.url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={sponsor.logo}
                      alt={sponsor.name}
                      class="w-full h-auto max-w-64 rounded-lg mb-3"
                    />
                  </a>
                ) : (
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="w-full h-auto max-w-64 rounded-lg mb-3"
                  />
                )}
                {sponsor.message && (
                  <div class="relative bg-gray-700 rounded-2xl px-4 py-3 text-white text-sm w-72 mt-2">
                    {/* Speech bubble tail pointing up to logo */}
                    <div class="absolute -top-2 left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-8 border-r-8 border-b-8 border-l-transparent border-r-transparent border-b-gray-700" />
                    <p class="text-center leading-relaxed">{sponsor.message}</p>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Tier 2: เสนาบดีผู้มากเมตตา -->
    {
      getSponsorsByTier("tier2").length > 0 && (
        <div class="mb-8">
          <div class="flex items-center justify-center gap-3 mb-6">
            <iconify-icon icon="mdi:medal" class="text-[#19806f] text-4xl"></iconify-icon>
            <h3 class="text-2xl font-bold text-center text-white" style="font-family: 'K2D', sans-serif;">
              {tierNames.tier2}
            </h3>
          </div>
          <div class="flex flex-wrap gap-6 justify-center items-start">
            {getSponsorsByTier("tier2").map((sponsor) => (
              <div
                class={`flex flex-col items-center ${sponsor.isPlaceholder ? "opacity-60" : ""} max-w-60`}
              >
                {sponsor.url ? (
                  <a
                    href={sponsor.url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={sponsor.logo}
                      alt={sponsor.name}
                      class="w-full h-auto max-w-56 rounded-lg mb-3"
                    />
                  </a>
                ) : (
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="w-full h-auto max-w-56 rounded-lg mb-3"
                  />
                )}
                {sponsor.message && (
                  <div class="relative bg-gray-700 rounded-2xl px-4 py-3 text-white text-sm w-64 mt-2">
                    {/* Speech bubble tail pointing up to logo */}
                    <div class="absolute -top-2 left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-8 border-r-8 border-b-8 border-l-transparent border-r-transparent border-b-gray-700" />
                    <p class="text-center leading-relaxed">{sponsor.message}</p>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Tier 1: ผู้อุปถัมภ์รุ่นเยาว์ -->
    {
      getSponsorsByTier("tier1").length > 0 && (
        <div class="mb-8">
          <div class="flex items-center justify-center gap-3 mb-6">
            <iconify-icon icon="mdi:star-circle" class="text-[#19806f] text-4xl"></iconify-icon>
            <h3 class="text-2xl font-bold text-center text-white" style="font-family: 'K2D', sans-serif;">
              {tierNames.tier1}
            </h3>
          </div>
          <div class="flex flex-wrap gap-6 justify-center items-start">
            {getSponsorsByTier("tier1").map((sponsor) => (
              <div
                class={`flex flex-col items-center ${sponsor.isPlaceholder ? "opacity-60" : ""} max-w-52`}
              >
                {sponsor.url ? (
                  <a
                    href={sponsor.url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={sponsor.logo}
                      alt={sponsor.name}
                      class="w-full h-auto max-w-32 rounded-lg mb-3"
                    />
                  </a>
                ) : (
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="w-full h-auto max-w-32 rounded-lg mb-3"
                  />
                )}
                {sponsor.message && (
                  <div class="relative bg-gray-700 rounded-2xl px-4 py-3 text-white text-sm w-56 mt-2">
                    {/* Speech bubble tail pointing up to logo */}
                    <div class="absolute -top-2 left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-8 border-r-8 border-b-8 border-l-transparent border-r-transparent border-b-gray-700" />
                    <p class="text-center leading-relaxed">{sponsor.message}</p>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Individual Sponsors -->
    {
      getSponsorsByTier("individual").length > 0 && (
        <div class="border-t border-gray-800 pt-8 mt-8">
          <div class="flex items-center justify-center gap-3 mb-8">
            <iconify-icon icon="mdi:account-heart" class="text-[#19806f] text-4xl"></iconify-icon>
            <h3 class="text-2xl font-bold text-center text-white" style="font-family: 'K2D', sans-serif;">
              {tierNames.individual}
            </h3>
          </div>
          <div class="flex flex-wrap gap-6 justify-center">
            {getSponsorsByTier("individual").map((sponsor) => (
              <div
                class={`flex flex-col w-64 ${sponsor.isPlaceholder ? "opacity-60" : ""}`}
              >
                {/* Avatar and Name */}
                <div class="flex items-center gap-3 mb-3">
                  <img
                    src={`https://api.dicebear.com/9.x/notionists-neutral/svg?seed=${encodeURIComponent(sponsor.name)}&backgroundColor=b6e3f4,c0aede,d1d4f9,ffd5dc,ffdfbf&backgroundType=gradientLinear`}
                    alt={sponsor.name}
                    class="w-12 h-12 rounded-full bg-white/20 p-1"
                  />
                  {sponsor.url ? (
                    <a
                      href={sponsor.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-white font-bold text-sm hover:underline"
                    >
                      {sponsor.name}
                    </a>
                  ) : (
                    <span class="text-white font-bold text-sm">
                      {sponsor.name}
                    </span>
                  )}
                </div>

                {(sponsor.message || sponsor.isPlaceholder) && (
                  <div class="relative bg-gray-700 rounded-2xl px-4 py-3 text-white text-sm w-60">
                    {/* Speech bubble tail - aligned with avatar (24px from left edge) */}
                    <div class="absolute -top-2 left-4 w-0 h-0 border-l-8 border-r-8 border-b-8 border-l-transparent border-r-transparent border-b-gray-700" />

                    {sponsor.message ? (
                      <p class="text-left leading-relaxed">{sponsor.message}</p>
                    ) : (
                      <p class="text-left text-gray-400 italic">
                        Sponsor Us...
                      </p>
                    )}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )
    }
  </div>
</section>