---
const raisedAmount = 124061.77;
const goalAmount = 120000;
const progressPercentage = Math.round((raisedAmount / goalAmount) * 100);

const goals = [
  { amount: 60000, title: "Basic Event", description: "Essential hackathon infrastructure", achieved: true },
  { amount: 90000, title: "Food Upgrades & Prizes", description: "Better meals and awards", achieved: true },
  { amount: 120000, title: "More Prizes & Swag", description: "Additional rewards and free swag", achieved: true }
];
---

<section id="funding" class="w-full bg-gradient-to-br from-[#05232e] to-[#05204E] text-white pt-24 pb-16">
  <div class="max-w-6xl mx-auto px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-7xl text-white mb-6 tracking-wide font-display scroll-animate fade-down">
        FUNDING STATUS
      </h2>
      <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto scroll-animate fade-up stagger-1">
        Community-powered hackathon made possible by amazing supporters
      </p>
    </div>

    <!-- Progress Overview -->
    <div class="max-w-4xl mx-auto mb-16">
      <div class="bg-gray-900 rounded-2xl p-8 border border-gray-800 scroll-animate scale-up stagger-2">
        <div class="text-center mb-8">
          <!-- Progress Circle -->
          <div class="relative inline-flex items-center justify-center scroll-animate scale-up stagger-3">
            <svg class="w-48 h-48 transform -rotate-90" viewBox="0 0 100 100">
              <!-- Background circle -->
              <circle 
                cx="50" cy="50" r="40" 
                fill="transparent" 
                stroke="rgb(75 85 99)" 
                stroke-width="8"
              />
              <!-- Progress circle -->
              <circle 
                cx="50" cy="50" r="40" 
                fill="transparent" 
                stroke="#19806f" 
                stroke-width="8"
                stroke-linecap="round"
                stroke-dasharray="251.2"
                stroke-dashoffset={251.2 - (251.2 * progressPercentage) / 100}
                class="transition-all duration-1000"
              />
            </svg>
            <div class="absolute inset-0 flex items-center justify-center flex-col">
              <div class="text-4xl font-bold text-[#19806f] font-subhead">{progressPercentage}%</div>
              <div class="text-gray-400 text-sm">funded</div>
            </div>
          </div>
        </div>
        
        <!-- Amount Details -->
        <div class="text-center mb-8 scroll-animate fade-up stagger-4">
          <div class="text-3xl md:text-4xl font-bold text-white mb-2 font-subhead">
            ฿{raisedAmount.toLocaleString()}
          </div>
          <div class="text-xl text-gray-300">
            raised of ฿{goalAmount.toLocaleString()} goal
          </div>
        </div>

        <!-- Success Message -->
        <div class="bg-[#19806f]/10 border border-[#19806f]/30 rounded-xl p-6 text-center scroll-animate fade-up stagger-5">
          <iconify-icon icon="mdi:heart" class="text-[#19806f] text-4xl mb-3 block"></iconify-icon>
          <h3 class="text-xl font-bold mb-2 text-white font-subhead">Thank You, Community & Sponsors!</h3>
          <p class="text-gray-300">
            Amazing response from our community and generous sponsors has made this hackathon possible. 
            We've successfully funded the essential event infrastructure and food upgrades!
          </p>
        </div>
      </div>
    </div>

    <!-- Funding Goals -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {goals.map((goal, index) => (
        <div class={`bg-gray-900 rounded-xl p-6 border-2 transition-colors scroll-animate fade-up stagger-${index + 6} ${
          goal.achieved 
            ? 'border-[#19806f] bg-[#19806f]/5' 
            : 'border-gray-800 hover:border-gray-700'
        }`}>
          <div class="flex items-center gap-4 mb-4">
            <div class={`w-12 h-12 rounded-full flex items-center justify-center ${
              goal.achieved 
                ? 'bg-[#19806f] text-white' 
                : 'bg-gray-800 text-gray-400'
            }`}>
              <iconify-icon 
                icon={goal.achieved ? "mdi:check" : "mdi:target"} 
                class="text-2xl"
              ></iconify-icon>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-bold text-white font-subhead">{goal.title}</h3>
              <div class="text-[#19806f] font-bold">฿{goal.amount.toLocaleString()}</div>
            </div>
          </div>
          <p class="text-gray-300 text-sm mb-3">{goal.description}</p>
          <div class={`text-sm font-medium ${
            goal.achieved 
              ? 'text-[#19806f]' 
              : 'text-gray-500'
          }`}>
            {goal.achieved ? '✅ Achieved!' : `${Math.round((raisedAmount / goal.amount) * 100)}% progress`}
          </div>
        </div>
      ))}
    </div>

  </div>
</section>